[Unit]
Description=Plex Server
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
KillMode=none
Restart=on-failure
RestartSec=5s

Environment=CONTAINER=%p
Environment=DOCKER_IMAGE=docker-pms-rpi:1.5.5
Environment=DOCKER_NAMESPACE_IMAGES=jairovm

ExecStartPre=-/usr/bin/docker kill ${CONTAINER}
ExecStartPre=-/usr/bin/docker rm ${CONTAINER}
ExecStartPre=-/usr/bin/docker pull ${DOCKER_NAMESPACE_IMAGES}/${DOCKER_IMAGE}
ExecStart=/usr/bin/docker run \
  --name ${CONTAINER} \
  --network=host \
  -p 32400:32400 \
  -v /home/pi/plex/config:/config \
  -v /home/pi/plex/data:/data \
  -v /home/pi/plex/transcode:/transcode \
  ${DOCKER_NAMESPACE_IMAGES}/${DOCKER_IMAGE}

ExecStop=/usr/bin/docker stop ${CONTAINER}

[Install]
WantedBy=multi-user.target
